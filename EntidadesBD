CREATE TABLE Cliente(ID_Cliente int AUTO_INCREMENT PRIMARY KEY, Nombre VARCHAR(20) NOT NULL, Apellido VARCHAR(20) NOT NULL, Correo VARCHAR(50) NOT NULL, Contraseña VARCHAR(25) NOT NULL, Registro DATE);
CREATE TABLE Administradores(ID_Administrador int AUTO_INCREMENT PRIMARY KEY, Teléfono VARCHAR(25), Activo boolean, Nombre VARCHAR(25) NOT NULL, Apellido VARCHAR(25) NOT NULL, Correo VARCHAR(50), Contraseña VARCHAR(35));
CREATE TABLE Organizadores(Cédula VARCHAR(10) NOT NULL  PRIMARY KEY, RUT VARCHAR(15), Teléfono VARCHAR(20), ID_Cliente int);
CREATE TABLE Eventos(ID_Evento int AUTO_INCREMENT PRIMARY KEY, Título VARCHAR(50) NOT NULL, Descripción VARCHAR(200) NOT NULL, Creacion_Evento DATE, Ubicacion VARCHAR(50), Cédula VARCHAR(10));
CREATE TABLE Comentarios(ID_Comentario int AUTO_INCREMENT PRIMARY KEY, ID_Cliente int, ID_Evento int, Valoración TINYINT CHECK (Valoración BETWEEN 1 AND 10), Texto VARCHAR(250), Creación_Comentario DATE);
CREATE TABLE Administra(Cédula VARCHAR(10), ID_Evento int, ID_Administrador int, Organizador_Verificado boolean, Evento_Verificado boolean);
ALTER TABLE organizador ADD FOREIGN KEY(ID_Clientes) REFERENCES Clientes(ID_Clientes)
ALTER TABLE comentarios ADD FOREIGN KEY(ID_Clientes) REFERENCES Clientes(ID_Clientes)
ALTER TABLE administra ADD FOREIGN KEY(Cédula) REFERENCES organizadores(Cédula)
ALTER TABLE administra ADD FOREIGN KEY(ID_Evento) REFERENCES eventos(ID_Evento)
ALTER TABLE administra ADD FOREIGN KEY (ID_Administrador) Refere
ALTER TABLE comentarios ADD FOREIGN KEY(ID_Organizadores) REFERENCES  organizadores(ID_Organizadores)
ALTER TABLE eventos ADD FOREIGN KEY(Cédula) REFERENCES organizadores(Cédula)
